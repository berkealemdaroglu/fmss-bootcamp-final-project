    <style name="guide_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_19sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:lineHeight" tools:ignore="NewApi">@dimen/_25sdp</item>
        <item name="android:textColor">@color/search_title_color</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">600</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

</resources>