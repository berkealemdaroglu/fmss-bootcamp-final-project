<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="fragments_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_45sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:lineHeight" tools:ignore="NewApi">@dimen/_37sdp</item>
        <item name="android:textColor">@color/search_title_color</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_menu_item_selected</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent_detail" parent="">
        <item name="cornerSizeBottomLeft">@dimen/_32sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_32sdp</item>
    </style>

    <style name="guide_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_19sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:lineHeight" tools:ignore="NewApi">@dimen/_25sdp</item>
        <item name="android:textColor">@color/search_title_color</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">600</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="textAllCaps">false</item>
        <item name="android:foreground">@android:color/transparent</item>
    </style>

    <style name="getStartedTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">95dp</item>
        <item name="android:layout_marginTop">91dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">95dp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:lineHeight" tools:ignore="NewApi">38sp</item>
        <item name="android:textColor">#FFCD93</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="getStartedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">103dp</item>
        <item name="android:layout_marginEnd">114dp</item>
        <item name="android:layout_marginBottom">52dp</item>
        <item name="android:backgroundTint">#FFCD93</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:lineHeight" tools:ignore="NewApi">16sp</item>
        <item name="android:textColor">#404756</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>